<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.guru.google.Management">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <ImageView
            android:id="@+id/management"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:srcCompat="@mipmap/white" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/management_team"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="24sp"
            android:background="#03A9F4"
            android:textColor="#fff"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/chair_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                app:srcCompat="@mipmap/white" />

            <TextView
                android:id="@+id/chair_person_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:textSize="16sp"
                android:layout_marginTop="6dp"
                android:textColor="#000000"
                android:layout_marginLeft="6dp"
                android:text="@string/chairperson" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/director"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                app:srcCompat="@mipmap/white" />

            <TextView
                android:id="@+id/director_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:textSize="16sp"
                android:layout_marginTop="6dp"
                android:textColor="#000000"
                android:layout_marginLeft="6dp"
                android:text="@string/director" />

        </LinearLayout>
        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:text="TextView" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/vice_chair"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                app:srcCompat="@mipmap/white" />

            <TextView
                android:id="@+id/vice_chair_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:textSize="16sp"
                android:layout_marginTop="6dp"
                android:textColor="#000000"
                android:layout_marginLeft="6dp"
                android:text="@string/vice_chair" />
        </LinearLayout>
        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:text="TextView" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/secretary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                app:srcCompat="@mipmap/white" />

            <TextView
                android:id="@+id/secretary_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:textSize="16sp"
                android:layout_marginTop="6dp"
                android:textColor="#000000"
                android:layout_marginLeft="6dp"
                android:text="@string/secretary" />
        </LinearLayout>
        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:text="TextView" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/vice_chairperson"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                app:srcCompat="@mipmap/white" />

            <TextView
                android:id="@+id/vice_chairperson_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:textSize="16sp"
                android:layout_marginTop="6dp"
                android:textColor="#000000"
                android:layout_marginLeft="6dp"
                android:text="@string/vice_chairperson" />
        </LinearLayout>
        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/trustee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                app:srcCompat="@mipmap/white" />

            <TextView
                android:id="@+id/trustee_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:textSize="16sp"
                android:layout_marginTop="6dp"
                android:textColor="#000000"
                android:layout_marginLeft="6dp"
                android:text="@string/trustee" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>

